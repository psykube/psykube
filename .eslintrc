{
  "parser": "babel-eslint",
  "plugins": [
    "babel",
    "react"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "rules": {
    "react/prop-types": ["error", { ignore: ["relay"] }],
    "import/newline-after-import": 0,
    "import/no-dynamic-require": 0,
    "import/prefer-default-export": 0,
    "class-methods-use-this": 0,
    "global-require": 0,
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"]
}
